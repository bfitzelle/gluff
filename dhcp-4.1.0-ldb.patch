+    log_error("Line %d: sqlite3 error: %s", __LINE__, sqlite3_errmsg(ldb));
+    ok = 0;
+  }
+  
+  if (!ok) log_error("ldb error: %s", sqlite3_errmsg(ldb));
+  
+}
